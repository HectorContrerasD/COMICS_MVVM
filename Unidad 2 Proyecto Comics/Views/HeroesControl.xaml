<UserControl x:Class="Unidad_2_Proyecto_Comics.Views.HeroesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unidad_2_Proyecto_Comics.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Gold">
    <UserControl.Effect>
        <DropShadowEffect  BlurRadius="10"  Color="DarkRed"></DropShadowEffect>
    </UserControl.Effect>
    <StackPanel>
        <Image Width="60" Stretch="Fill" Height="50" Source="{Binding Imagen}"></Image>
        <TextBlock FontSize="14"  Margin="5" FontWeight="Bold" Text="{Binding NombreHeroe}" TextAlignment="Center"></TextBlock>
    </StackPanel>
</UserControl>
